<h1>Admin Invoice Show Page</h1>
<h3>Invoice <%= @invoice.id %></h3>
<div class="invoice_info">
  <p id="invoice">Status: <%= form_with model: [:admin, @invoice], local: true do |f| %>
        <%= f.label :status, hidden: true %>
        <%= f.select :status, ['in progress', 'completed', 'cancelled'], selected: @invoice.status %>
        <%= f.submit "Update Invoice Status" %>
        <% end %></p>
  <p>Date: <%= @invoice.format_date %></p>
  <p>Customer: <%= @invoice.customer.full_name %></p>
  <p>Total Revenue: <%= @invoice.total_revenue %></p>
  <p>Total Revenue with Discounts: <%= @invoice.total_discount_revenue %></p>
</div>
<h3>Invoice Items</h3>
<div class="invoice_items">
  <% @invoice.invoice_items.each do |inv_item| %>
    <h4><%= inv_item.item.name %></h4>
    <p>Qty: <%= inv_item.quantity %></p>
    <p>Price: $<%= (inv_item.unit_price / 100.0) %></p>
    <p>Status: <%= inv_item.status %></p>
  <% end %>
</div>


