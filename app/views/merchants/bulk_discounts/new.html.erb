<h1><%= @merchant.name %> New Discount</h1>

<%= form_with model: [@merchant, @discount], local: true do |f| %>
  <%= f.label :name, "Discount Name" %>
  <p><%= f.text_field :name %></p>
  <%= f.label :percent_discount, "Percent Discount range:(0.05-1.00)" %>
  <p><%= f.number_field :percent_discount, in: 0.05..1.00, step: 0.05 %></p>
  <%= f.label :quantity_threshold, "Quantity Threshold" %>
  <p><%= f.number_field :quantity_threshold %></p>
  <%= f.submit 'Create Bulk discount'%>
<% end %>